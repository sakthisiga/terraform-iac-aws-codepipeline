# Terraform Settings block
terraform {
  required_version = ">= 1.6"
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = ">= 5.0"
    }
    null = {
      source  = "hashicorp/null"
      version = "~> 3.0"
    }
    random = {
      source  = "hashicorp/random"
      version = "~> 3.0"
    }
  }
  backend "s3" {}
}


#Provider Block
provider "aws" {
  region  = var.aws_region
  profile = "default"
}

resource "random_pet" "this" {
  length = 2
}
